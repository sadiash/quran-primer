{
  "id": 75,
  "nameArabic": "القيامة",
  "nameSimple": "Al-Qiyamah",
  "nameComplex": "Al-Qiyāmah",
  "nameTranslation": "The Resurrection",
  "revelationType": "makkah",
  "versesCount": 40,
  "verses": [
    {
      "id": 5552,
      "verseKey": "75:1",
      "verseNumber": 1,
      "textUthmani": " لَآ أُقْسِمُ بِيَوْمِ ٱلْقِيَـٰمَةِ",
      "textSimple": "لَا أُقْسِمُ بِيَوْمِ الْقِيَامَةِ"
    },
    {
      "id": 5553,
      "verseKey": "75:2",
      "verseNumber": 2,
      "textUthmani": "وَلَآ أُقْسِمُ بِٱلنَّفْسِ ٱللَّوَّامَةِ",
      "textSimple": "وَلَا أُقْسِمُ بِالنَّفْسِ اللَّوَّامَةِ"
    },
    {
      "id": 5554,
      "verseKey": "75:3",
      "verseNumber": 3,
      "textUthmani": "أَيَحْسَبُ ٱلْإِنسَـٰنُ أَلَّن نَّجْمَعَ عِظَامَهُۥ",
      "textSimple": "أَيَحْسَبُ الْإِنسَانُ أَلَّن نَّجْمَعَ عِظَامَهُ"
    },
    {
      "id": 5555,
      "verseKey": "75:4",
      "verseNumber": 4,
      "textUthmani": "بَلَىٰ قَـٰدِرِينَ عَلَىٰٓ أَن نُّسَوِّىَ بَنَانَهُۥ",
      "textSimple": "بَلَىٰ قَادِرِينَ عَلَىٰ أَن نُّسَوِّيَ بَنَانَهُ"
    },
    {
      "id": 5556,
      "verseKey": "75:5",
      "verseNumber": 5,
      "textUthmani": "بَلْ يُرِيدُ ٱلْإِنسَـٰنُ لِيَفْجُرَ أَمَامَهُۥ",
      "textSimple": "بَلْ يُرِيدُ الْإِنسَانُ لِيَفْجُرَ أَمَامَهُ"
    },
    {
      "id": 5557,
      "verseKey": "75:6",
      "verseNumber": 6,
      "textUthmani": "يَسْـَٔلُ أَيَّانَ يَوْمُ ٱلْقِيَـٰمَةِ",
      "textSimple": "يَسْأَلُ أَيَّانَ يَوْمُ الْقِيَامَةِ"
    },
    {
      "id": 5558,
      "verseKey": "75:7",
      "verseNumber": 7,
      "textUthmani": "فَإِذَا بَرِقَ ٱلْبَصَرُ",
      "textSimple": "فَإِذَا بَرِقَ الْبَصَرُ"
    },
    {
      "id": 5559,
      "verseKey": "75:8",
      "verseNumber": 8,
      "textUthmani": "وَخَسَفَ ٱلْقَمَرُ",
      "textSimple": "وَخَسَفَ الْقَمَرُ"
    },
    {
      "id": 5560,
      "verseKey": "75:9",
      "verseNumber": 9,
      "textUthmani": "وَجُمِعَ ٱلشَّمْسُ وَٱلْقَمَرُ",
      "textSimple": "وَجُمِعَ الشَّمْسُ وَالْقَمَرُ"
    },
    {
      "id": 5561,
      "verseKey": "75:10",
      "verseNumber": 10,
      "textUthmani": "يَقُولُ ٱلْإِنسَـٰنُ يَوْمَئِذٍ أَيْنَ ٱلْمَفَرُّ",
      "textSimple": "يَقُولُ الْإِنسَانُ يَوْمَئِذٍ أَيْنَ الْمَفَرُّ"
    },
    {
      "id": 5562,
      "verseKey": "75:11",
      "verseNumber": 11,
      "textUthmani": "كَلَّا لَا وَزَرَ",
      "textSimple": "كَلَّا لَا وَزَرَ"
    },
    {
      "id": 5563,
      "verseKey": "75:12",
      "verseNumber": 12,
      "textUthmani": "إِلَىٰ رَبِّكَ يَوْمَئِذٍ ٱلْمُسْتَقَرُّ",
      "textSimple": "إِلَىٰ رَبِّكَ يَوْمَئِذٍ الْمُسْتَقَرُّ"
    },
    {
      "id": 5564,
      "verseKey": "75:13",
      "verseNumber": 13,
      "textUthmani": "يُنَبَّؤُا۟ ٱلْإِنسَـٰنُ يَوْمَئِذٍۭ بِمَا قَدَّمَ وَأَخَّرَ",
      "textSimple": "يُنَبَّأُ الْإِنسَانُ يَوْمَئِذٍ بِمَا قَدَّمَ وَأَخَّرَ"
    },
    {
      "id": 5565,
      "verseKey": "75:14",
      "verseNumber": 14,
      "textUthmani": "بَلِ ٱلْإِنسَـٰنُ عَلَىٰ نَفْسِهِۦ بَصِيرَةٌ",
      "textSimple": "بَلِ الْإِنسَانُ عَلَىٰ نَفْسِهِ بَصِيرَةٌ"
    },
    {
      "id": 5566,
      "verseKey": "75:15",
      "verseNumber": 15,
      "textUthmani": "وَلَوْ أَلْقَىٰ مَعَاذِيرَهُۥ",
      "textSimple": "وَلَوْ أَلْقَىٰ مَعَاذِيرَهُ"
    },
    {
      "id": 5567,
      "verseKey": "75:16",
      "verseNumber": 16,
      "textUthmani": "لَا تُحَرِّكْ بِهِۦ لِسَانَكَ لِتَعْجَلَ بِهِۦٓ",
      "textSimple": "لَا تُحَرِّكْ بِهِ لِسَانَكَ لِتَعْجَلَ بِهِ"
    },
    {
      "id": 5568,
      "verseKey": "75:17",
      "verseNumber": 17,
      "textUthmani": "إِنَّ عَلَيْنَا جَمْعَهُۥ وَقُرْءَانَهُۥ",
      "textSimple": "إِنَّ عَلَيْنَا جَمْعَهُ وَقُرْآنَهُ"
    },
    {
      "id": 5569,
      "verseKey": "75:18",
      "verseNumber": 18,
      "textUthmani": "فَإِذَا قَرَأْنَـٰهُ فَٱتَّبِعْ قُرْءَانَهُۥ",
      "textSimple": "فَإِذَا قَرَأْنَاهُ فَاتَّبِعْ قُرْآنَهُ"
    },
    {
      "id": 5570,
      "verseKey": "75:19",
      "verseNumber": 19,
      "textUthmani": "ثُمَّ إِنَّ عَلَيْنَا بَيَانَهُۥ",
      "textSimple": "ثُمَّ إِنَّ عَلَيْنَا بَيَانَهُ"
    },
    {
      "id": 5571,
      "verseKey": "75:20",
      "verseNumber": 20,
      "textUthmani": "كَلَّا بَلْ تُحِبُّونَ ٱلْعَاجِلَةَ",
      "textSimple": "كَلَّا بَلْ تُحِبُّونَ الْعَاجِلَةَ"
    },
    {
      "id": 5572,
      "verseKey": "75:21",
      "verseNumber": 21,
      "textUthmani": "وَتَذَرُونَ ٱلْـَٔاخِرَةَ",
      "textSimple": "وَتَذَرُونَ الْآخِرَةَ"
    },
    {
      "id": 5573,
      "verseKey": "75:22",
      "verseNumber": 22,
      "textUthmani": "وُجُوهٌ يَوْمَئِذٍ نَّاضِرَةٌ",
      "textSimple": "وُجُوهٌ يَوْمَئِذٍ نَّاضِرَةٌ"
    },
    {
      "id": 5574,
      "verseKey": "75:23",
      "verseNumber": 23,
      "textUthmani": "إِلَىٰ رَبِّهَا نَاظِرَةٌ",
      "textSimple": "إِلَىٰ رَبِّهَا نَاظِرَةٌ"
    },
    {
      "id": 5575,
      "verseKey": "75:24",
      "verseNumber": 24,
      "textUthmani": "وَوُجُوهٌ يَوْمَئِذٍۭ بَاسِرَةٌ",
      "textSimple": "وَوُجُوهٌ يَوْمَئِذٍ بَاسِرَةٌ"
    },
    {
      "id": 5576,
      "verseKey": "75:25",
      "verseNumber": 25,
      "textUthmani": "تَظُنُّ أَن يُفْعَلَ بِهَا فَاقِرَةٌ",
      "textSimple": "تَظُنُّ أَن يُفْعَلَ بِهَا فَاقِرَةٌ"
    },
    {
      "id": 5577,
      "verseKey": "75:26",
      "verseNumber": 26,
      "textUthmani": "كَلَّآ إِذَا بَلَغَتِ ٱلتَّرَاقِىَ",
      "textSimple": "كَلَّا إِذَا بَلَغَتِ التَّرَاقِيَ"
    },
    {
      "id": 5578,
      "verseKey": "75:27",
      "verseNumber": 27,
      "textUthmani": "وَقِيلَ مَنْ ۜ رَاقٍ",
      "textSimple": "وَقِيلَ مَنْ ۜ رَاقٍ"
    },
    {
      "id": 5579,
      "verseKey": "75:28",
      "verseNumber": 28,
      "textUthmani": "وَظَنَّ أَنَّهُ ٱلْفِرَاقُ",
      "textSimple": "وَظَنَّ أَنَّهُ الْفِرَاقُ"
    },
    {
      "id": 5580,
      "verseKey": "75:29",
      "verseNumber": 29,
      "textUthmani": "وَٱلْتَفَّتِ ٱلسَّاقُ بِٱلسَّاقِ",
      "textSimple": "وَالْتَفَّتِ السَّاقُ بِالسَّاقِ"
    },
    {
      "id": 5581,
      "verseKey": "75:30",
      "verseNumber": 30,
      "textUthmani": "إِلَىٰ رَبِّكَ يَوْمَئِذٍ ٱلْمَسَاقُ",
      "textSimple": "إِلَىٰ رَبِّكَ يَوْمَئِذٍ الْمَسَاقُ"
    },
    {
      "id": 5582,
      "verseKey": "75:31",
      "verseNumber": 31,
      "textUthmani": "فَلَا صَدَّقَ وَلَا صَلَّىٰ",
      "textSimple": "فَلَا صَدَّقَ وَلَا صَلَّىٰ"
    },
    {
      "id": 5583,
      "verseKey": "75:32",
      "verseNumber": 32,
      "textUthmani": "وَلَـٰكِن كَذَّبَ وَتَوَلَّىٰ",
      "textSimple": "وَلَٰكِن كَذَّبَ وَتَوَلَّىٰ"
    },
    {
      "id": 5584,
      "verseKey": "75:33",
      "verseNumber": 33,
      "textUthmani": "ثُمَّ ذَهَبَ إِلَىٰٓ أَهْلِهِۦ يَتَمَطَّىٰٓ",
      "textSimple": "ثُمَّ ذَهَبَ إِلَىٰ أَهْلِهِ يَتَمَطَّىٰ"
    },
    {
      "id": 5585,
      "verseKey": "75:34",
      "verseNumber": 34,
      "textUthmani": "أَوْلَىٰ لَكَ فَأَوْلَىٰ",
      "textSimple": "أَوْلَىٰ لَكَ فَأَوْلَىٰ"
    },
    {
      "id": 5586,
      "verseKey": "75:35",
      "verseNumber": 35,
      "textUthmani": "ثُمَّ أَوْلَىٰ لَكَ فَأَوْلَىٰٓ",
      "textSimple": "ثُمَّ أَوْلَىٰ لَكَ فَأَوْلَىٰ"
    },
    {
      "id": 5587,
      "verseKey": "75:36",
      "verseNumber": 36,
      "textUthmani": "أَيَحْسَبُ ٱلْإِنسَـٰنُ أَن يُتْرَكَ سُدًى",
      "textSimple": "أَيَحْسَبُ الْإِنسَانُ أَن يُتْرَكَ سُدًى"
    },
    {
      "id": 5588,
      "verseKey": "75:37",
      "verseNumber": 37,
      "textUthmani": "أَلَمْ يَكُ نُطْفَةً مِّن مَّنِىٍّ يُمْنَىٰ",
      "textSimple": "أَلَمْ يَكُ نُطْفَةً مِّن مَّنِيٍّ يُمْنَىٰ"
    },
    {
      "id": 5589,
      "verseKey": "75:38",
      "verseNumber": 38,
      "textUthmani": "ثُمَّ كَانَ عَلَقَةً فَخَلَقَ فَسَوَّىٰ",
      "textSimple": "ثُمَّ كَانَ عَلَقَةً فَخَلَقَ فَسَوَّىٰ"
    },
    {
      "id": 5590,
      "verseKey": "75:39",
      "verseNumber": 39,
      "textUthmani": "فَجَعَلَ مِنْهُ ٱلزَّوْجَيْنِ ٱلذَّكَرَ وَٱلْأُنثَىٰٓ",
      "textSimple": "فَجَعَلَ مِنْهُ الزَّوْجَيْنِ الذَّكَرَ وَالْأُنثَىٰ"
    },
    {
      "id": 5591,
      "verseKey": "75:40",
      "verseNumber": 40,
      "textUthmani": "أَلَيْسَ ذَٰلِكَ بِقَـٰدِرٍ عَلَىٰٓ أَن يُحْـِۧىَ ٱلْمَوْتَىٰ",
      "textSimple": "أَلَيْسَ ذَٰلِكَ بِقَادِرٍ عَلَىٰ أَن يُحْيِيَ الْمَوْتَىٰ"
    }
  ]
}