{
  "id": 70,
  "nameArabic": "المعارج",
  "nameSimple": "Al-Ma'arij",
  "nameComplex": "Al-Ma`ārij",
  "nameTranslation": "The Ascending Stairways",
  "revelationType": "makkah",
  "versesCount": 44,
  "verses": [
    {
      "id": 5376,
      "verseKey": "70:1",
      "verseNumber": 1,
      "textUthmani": " سَأَلَ سَآئِلٌۢ بِعَذَابٍ وَاقِعٍ",
      "textSimple": "سَأَلَ سَائِلٌ بِعَذَابٍ وَاقِعٍ"
    },
    {
      "id": 5377,
      "verseKey": "70:2",
      "verseNumber": 2,
      "textUthmani": "لِّلْكَـٰفِرِينَ لَيْسَ لَهُۥ دَافِعٌ",
      "textSimple": "لِّلْكَافِرِينَ لَيْسَ لَهُ دَافِعٌ"
    },
    {
      "id": 5378,
      "verseKey": "70:3",
      "verseNumber": 3,
      "textUthmani": "مِّنَ ٱللَّهِ ذِى ٱلْمَعَارِجِ",
      "textSimple": "مِّنَ اللَّهِ ذِي الْمَعَارِجِ"
    },
    {
      "id": 5379,
      "verseKey": "70:4",
      "verseNumber": 4,
      "textUthmani": "تَعْرُجُ ٱلْمَلَـٰٓئِكَةُ وَٱلرُّوحُ إِلَيْهِ فِى يَوْمٍ كَانَ مِقْدَارُهُۥ خَمْسِينَ أَلْفَ سَنَةٍ",
      "textSimple": "تَعْرُجُ الْمَلَائِكَةُ وَالرُّوحُ إِلَيْهِ فِي يَوْمٍ كَانَ مِقْدَارُهُ خَمْسِينَ أَلْفَ سَنَةٍ"
    },
    {
      "id": 5380,
      "verseKey": "70:5",
      "verseNumber": 5,
      "textUthmani": "فَٱصْبِرْ صَبْرًا جَمِيلًا",
      "textSimple": "فَاصْبِرْ صَبْرًا جَمِيلًا"
    },
    {
      "id": 5381,
      "verseKey": "70:6",
      "verseNumber": 6,
      "textUthmani": "إِنَّهُمْ يَرَوْنَهُۥ بَعِيدًا",
      "textSimple": "إِنَّهُمْ يَرَوْنَهُ بَعِيدًا"
    },
    {
      "id": 5382,
      "verseKey": "70:7",
      "verseNumber": 7,
      "textUthmani": "وَنَرَىٰهُ قَرِيبًا",
      "textSimple": "وَنَرَاهُ قَرِيبًا"
    },
    {
      "id": 5383,
      "verseKey": "70:8",
      "verseNumber": 8,
      "textUthmani": "يَوْمَ تَكُونُ ٱلسَّمَآءُ كَٱلْمُهْلِ",
      "textSimple": "يَوْمَ تَكُونُ السَّمَاءُ كَالْمُهْلِ"
    },
    {
      "id": 5384,
      "verseKey": "70:9",
      "verseNumber": 9,
      "textUthmani": "وَتَكُونُ ٱلْجِبَالُ كَٱلْعِهْنِ",
      "textSimple": "وَتَكُونُ الْجِبَالُ كَالْعِهْنِ"
    },
    {
      "id": 5385,
      "verseKey": "70:10",
      "verseNumber": 10,
      "textUthmani": "وَلَا يَسْـَٔلُ حَمِيمٌ حَمِيمًا",
      "textSimple": "وَلَا يَسْأَلُ حَمِيمٌ حَمِيمًا"
    },
    {
      "id": 5386,
      "verseKey": "70:11",
      "verseNumber": 11,
      "textUthmani": "يُبَصَّرُونَهُمْ ۚ يَوَدُّ ٱلْمُجْرِمُ لَوْ يَفْتَدِى مِنْ عَذَابِ يَوْمِئِذٍۭ بِبَنِيهِ",
      "textSimple": "يُبَصَّرُونَهُمْ ۚ يَوَدُّ الْمُجْرِمُ لَوْ يَفْتَدِي مِنْ عَذَابِ يَوْمِئِذٍ بِبَنِيهِ"
    },
    {
      "id": 5387,
      "verseKey": "70:12",
      "verseNumber": 12,
      "textUthmani": "وَصَـٰحِبَتِهِۦ وَأَخِيهِ",
      "textSimple": "وَصَاحِبَتِهِ وَأَخِيهِ"
    },
    {
      "id": 5388,
      "verseKey": "70:13",
      "verseNumber": 13,
      "textUthmani": "وَفَصِيلَتِهِ ٱلَّتِى تُـْٔوِيهِ",
      "textSimple": "وَفَصِيلَتِهِ الَّتِي تُؤْوِيهِ"
    },
    {
      "id": 5389,
      "verseKey": "70:14",
      "verseNumber": 14,
      "textUthmani": "وَمَن فِى ٱلْأَرْضِ جَمِيعًا ثُمَّ يُنجِيهِ",
      "textSimple": "وَمَن فِي الْأَرْضِ جَمِيعًا ثُمَّ يُنجِيهِ"
    },
    {
      "id": 5390,
      "verseKey": "70:15",
      "verseNumber": 15,
      "textUthmani": "كَلَّآ ۖ إِنَّهَا لَظَىٰ",
      "textSimple": "كَلَّا ۖ إِنَّهَا لَظَىٰ"
    },
    {
      "id": 5391,
      "verseKey": "70:16",
      "verseNumber": 16,
      "textUthmani": "نَزَّاعَةً لِّلشَّوَىٰ",
      "textSimple": "نَزَّاعَةً لِّلشَّوَىٰ"
    },
    {
      "id": 5392,
      "verseKey": "70:17",
      "verseNumber": 17,
      "textUthmani": "تَدْعُوا۟ مَنْ أَدْبَرَ وَتَوَلَّىٰ",
      "textSimple": "تَدْعُو مَنْ أَدْبَرَ وَتَوَلَّىٰ"
    },
    {
      "id": 5393,
      "verseKey": "70:18",
      "verseNumber": 18,
      "textUthmani": "وَجَمَعَ فَأَوْعَىٰٓ",
      "textSimple": "وَجَمَعَ فَأَوْعَىٰ"
    },
    {
      "id": 5394,
      "verseKey": "70:19",
      "verseNumber": 19,
      "textUthmani": "۞ إِنَّ ٱلْإِنسَـٰنَ خُلِقَ هَلُوعًا",
      "textSimple": "إِنَّ الْإِنسَانَ خُلِقَ هَلُوعًا"
    },
    {
      "id": 5395,
      "verseKey": "70:20",
      "verseNumber": 20,
      "textUthmani": "إِذَا مَسَّهُ ٱلشَّرُّ جَزُوعًا",
      "textSimple": "إِذَا مَسَّهُ الشَّرُّ جَزُوعًا"
    },
    {
      "id": 5396,
      "verseKey": "70:21",
      "verseNumber": 21,
      "textUthmani": "وَإِذَا مَسَّهُ ٱلْخَيْرُ مَنُوعًا",
      "textSimple": "وَإِذَا مَسَّهُ الْخَيْرُ مَنُوعًا"
    },
    {
      "id": 5397,
      "verseKey": "70:22",
      "verseNumber": 22,
      "textUthmani": "إِلَّا ٱلْمُصَلِّينَ",
      "textSimple": "إِلَّا الْمُصَلِّينَ"
    },
    {
      "id": 5398,
      "verseKey": "70:23",
      "verseNumber": 23,
      "textUthmani": "ٱلَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ دَآئِمُونَ",
      "textSimple": "الَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ دَائِمُونَ"
    },
    {
      "id": 5399,
      "verseKey": "70:24",
      "verseNumber": 24,
      "textUthmani": "وَٱلَّذِينَ فِىٓ أَمْوَٰلِهِمْ حَقٌّ مَّعْلُومٌ",
      "textSimple": "وَالَّذِينَ فِي أَمْوَالِهِمْ حَقٌّ مَّعْلُومٌ"
    },
    {
      "id": 5400,
      "verseKey": "70:25",
      "verseNumber": 25,
      "textUthmani": "لِّلسَّآئِلِ وَٱلْمَحْرُومِ",
      "textSimple": "لِّلسَّائِلِ وَالْمَحْرُومِ"
    },
    {
      "id": 5401,
      "verseKey": "70:26",
      "verseNumber": 26,
      "textUthmani": "وَٱلَّذِينَ يُصَدِّقُونَ بِيَوْمِ ٱلدِّينِ",
      "textSimple": "وَالَّذِينَ يُصَدِّقُونَ بِيَوْمِ الدِّينِ"
    },
    {
      "id": 5402,
      "verseKey": "70:27",
      "verseNumber": 27,
      "textUthmani": "وَٱلَّذِينَ هُم مِّنْ عَذَابِ رَبِّهِم مُّشْفِقُونَ",
      "textSimple": "وَالَّذِينَ هُم مِّنْ عَذَابِ رَبِّهِم مُّشْفِقُونَ"
    },
    {
      "id": 5403,
      "verseKey": "70:28",
      "verseNumber": 28,
      "textUthmani": "إِنَّ عَذَابَ رَبِّهِمْ غَيْرُ مَأْمُونٍ",
      "textSimple": "إِنَّ عَذَابَ رَبِّهِمْ غَيْرُ مَأْمُونٍ"
    },
    {
      "id": 5404,
      "verseKey": "70:29",
      "verseNumber": 29,
      "textUthmani": "وَٱلَّذِينَ هُمْ لِفُرُوجِهِمْ حَـٰفِظُونَ",
      "textSimple": "وَالَّذِينَ هُمْ لِفُرُوجِهِمْ حَافِظُونَ"
    },
    {
      "id": 5405,
      "verseKey": "70:30",
      "verseNumber": 30,
      "textUthmani": "إِلَّا عَلَىٰٓ أَزْوَٰجِهِمْ أَوْ مَا مَلَكَتْ أَيْمَـٰنُهُمْ فَإِنَّهُمْ غَيْرُ مَلُومِينَ",
      "textSimple": "إِلَّا عَلَىٰ أَزْوَاجِهِمْ أَوْ مَا مَلَكَتْ أَيْمَانُهُمْ فَإِنَّهُمْ غَيْرُ مَلُومِينَ"
    },
    {
      "id": 5406,
      "verseKey": "70:31",
      "verseNumber": 31,
      "textUthmani": "فَمَنِ ٱبْتَغَىٰ وَرَآءَ ذَٰلِكَ فَأُو۟لَـٰٓئِكَ هُمُ ٱلْعَادُونَ",
      "textSimple": "فَمَنِ ابْتَغَىٰ وَرَاءَ ذَٰلِكَ فَأُولَٰئِكَ هُمُ الْعَادُونَ"
    },
    {
      "id": 5407,
      "verseKey": "70:32",
      "verseNumber": 32,
      "textUthmani": "وَٱلَّذِينَ هُمْ لِأَمَـٰنَـٰتِهِمْ وَعَهْدِهِمْ رَٰعُونَ",
      "textSimple": "وَالَّذِينَ هُمْ لِأَمَانَاتِهِمْ وَعَهْدِهِمْ رَاعُونَ"
    },
    {
      "id": 5408,
      "verseKey": "70:33",
      "verseNumber": 33,
      "textUthmani": "وَٱلَّذِينَ هُم بِشَهَـٰدَٰتِهِمْ قَآئِمُونَ",
      "textSimple": "وَالَّذِينَ هُم بِشَهَادَاتِهِمْ قَائِمُونَ"
    },
    {
      "id": 5409,
      "verseKey": "70:34",
      "verseNumber": 34,
      "textUthmani": "وَٱلَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ يُحَافِظُونَ",
      "textSimple": "وَالَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ يُحَافِظُونَ"
    },
    {
      "id": 5410,
      "verseKey": "70:35",
      "verseNumber": 35,
      "textUthmani": "أُو۟لَـٰٓئِكَ فِى جَنَّـٰتٍ مُّكْرَمُونَ",
      "textSimple": "أُولَٰئِكَ فِي جَنَّاتٍ مُّكْرَمُونَ"
    },
    {
      "id": 5411,
      "verseKey": "70:36",
      "verseNumber": 36,
      "textUthmani": "فَمَالِ ٱلَّذِينَ كَفَرُوا۟ قِبَلَكَ مُهْطِعِينَ",
      "textSimple": "فَمَالِ الَّذِينَ كَفَرُوا قِبَلَكَ مُهْطِعِينَ"
    },
    {
      "id": 5412,
      "verseKey": "70:37",
      "verseNumber": 37,
      "textUthmani": "عَنِ ٱلْيَمِينِ وَعَنِ ٱلشِّمَالِ عِزِينَ",
      "textSimple": "عَنِ الْيَمِينِ وَعَنِ الشِّمَالِ عِزِينَ"
    },
    {
      "id": 5413,
      "verseKey": "70:38",
      "verseNumber": 38,
      "textUthmani": "أَيَطْمَعُ كُلُّ ٱمْرِئٍ مِّنْهُمْ أَن يُدْخَلَ جَنَّةَ نَعِيمٍ",
      "textSimple": "أَيَطْمَعُ كُلُّ امْرِئٍ مِّنْهُمْ أَن يُدْخَلَ جَنَّةَ نَعِيمٍ"
    },
    {
      "id": 5414,
      "verseKey": "70:39",
      "verseNumber": 39,
      "textUthmani": "كَلَّآ ۖ إِنَّا خَلَقْنَـٰهُم مِّمَّا يَعْلَمُونَ",
      "textSimple": "كَلَّا ۖ إِنَّا خَلَقْنَاهُم مِّمَّا يَعْلَمُونَ"
    },
    {
      "id": 5415,
      "verseKey": "70:40",
      "verseNumber": 40,
      "textUthmani": "فَلَآ أُقْسِمُ بِرَبِّ ٱلْمَشَـٰرِقِ وَٱلْمَغَـٰرِبِ إِنَّا لَقَـٰدِرُونَ",
      "textSimple": "فَلَا أُقْسِمُ بِرَبِّ الْمَشَارِقِ وَالْمَغَارِبِ إِنَّا لَقَادِرُونَ"
    },
    {
      "id": 5416,
      "verseKey": "70:41",
      "verseNumber": 41,
      "textUthmani": "عَلَىٰٓ أَن نُّبَدِّلَ خَيْرًا مِّنْهُمْ وَمَا نَحْنُ بِمَسْبُوقِينَ",
      "textSimple": "عَلَىٰ أَن نُّبَدِّلَ خَيْرًا مِّنْهُمْ وَمَا نَحْنُ بِمَسْبُوقِينَ"
    },
    {
      "id": 5417,
      "verseKey": "70:42",
      "verseNumber": 42,
      "textUthmani": "فَذَرْهُمْ يَخُوضُوا۟ وَيَلْعَبُوا۟ حَتَّىٰ يُلَـٰقُوا۟ يَوْمَهُمُ ٱلَّذِى يُوعَدُونَ",
      "textSimple": "فَذَرْهُمْ يَخُوضُوا وَيَلْعَبُوا حَتَّىٰ يُلَاقُوا يَوْمَهُمُ الَّذِي يُوعَدُونَ"
    },
    {
      "id": 5418,
      "verseKey": "70:43",
      "verseNumber": 43,
      "textUthmani": "يَوْمَ يَخْرُجُونَ مِنَ ٱلْأَجْدَاثِ سِرَاعًا كَأَنَّهُمْ إِلَىٰ نُصُبٍ يُوفِضُونَ",
      "textSimple": "يَوْمَ يَخْرُجُونَ مِنَ الْأَجْدَاثِ سِرَاعًا كَأَنَّهُمْ إِلَىٰ نُصُبٍ يُوفِضُونَ"
    },
    {
      "id": 5419,
      "verseKey": "70:44",
      "verseNumber": 44,
      "textUthmani": "خَـٰشِعَةً أَبْصَـٰرُهُمْ تَرْهَقُهُمْ ذِلَّةٌ ۚ ذَٰلِكَ ٱلْيَوْمُ ٱلَّذِى كَانُوا۟ يُوعَدُونَ",
      "textSimple": "خَاشِعَةً أَبْصَارُهُمْ تَرْهَقُهُمْ ذِلَّةٌ ۚ ذَٰلِكَ الْيَوْمُ الَّذِي كَانُوا يُوعَدُونَ"
    }
  ]
}