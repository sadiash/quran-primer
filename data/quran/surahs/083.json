{
  "id": 83,
  "nameArabic": "المطففين",
  "nameSimple": "Al-Mutaffifin",
  "nameComplex": "Al-Muţaffifīn",
  "nameTranslation": "The Defrauding",
  "revelationType": "makkah",
  "versesCount": 36,
  "verses": [
    {
      "id": 5849,
      "verseKey": "83:1",
      "verseNumber": 1,
      "textUthmani": " وَيْلٌ لِّلْمُطَفِّفِينَ",
      "textSimple": "وَيْلٌ لِّلْمُطَفِّفِينَ"
    },
    {
      "id": 5850,
      "verseKey": "83:2",
      "verseNumber": 2,
      "textUthmani": "ٱلَّذِينَ إِذَا ٱكْتَالُوا۟ عَلَى ٱلنَّاسِ يَسْتَوْفُونَ",
      "textSimple": "الَّذِينَ إِذَا اكْتَالُوا عَلَى النَّاسِ يَسْتَوْفُونَ"
    },
    {
      "id": 5851,
      "verseKey": "83:3",
      "verseNumber": 3,
      "textUthmani": "وَإِذَا كَالُوهُمْ أَو وَّزَنُوهُمْ يُخْسِرُونَ",
      "textSimple": "وَإِذَا كَالُوهُمْ أَو وَّزَنُوهُمْ يُخْسِرُونَ"
    },
    {
      "id": 5852,
      "verseKey": "83:4",
      "verseNumber": 4,
      "textUthmani": "أَلَا يَظُنُّ أُو۟لَـٰٓئِكَ أَنَّهُم مَّبْعُوثُونَ",
      "textSimple": "أَلَا يَظُنُّ أُولَٰئِكَ أَنَّهُم مَّبْعُوثُونَ"
    },
    {
      "id": 5853,
      "verseKey": "83:5",
      "verseNumber": 5,
      "textUthmani": "لِيَوْمٍ عَظِيمٍ",
      "textSimple": "لِيَوْمٍ عَظِيمٍ"
    },
    {
      "id": 5854,
      "verseKey": "83:6",
      "verseNumber": 6,
      "textUthmani": "يَوْمَ يَقُومُ ٱلنَّاسُ لِرَبِّ ٱلْعَـٰلَمِينَ",
      "textSimple": "يَوْمَ يَقُومُ النَّاسُ لِرَبِّ الْعَالَمِينَ"
    },
    {
      "id": 5855,
      "verseKey": "83:7",
      "verseNumber": 7,
      "textUthmani": "كَلَّآ إِنَّ كِتَـٰبَ ٱلْفُجَّارِ لَفِى سِجِّينٍ",
      "textSimple": "كَلَّا إِنَّ كِتَابَ الْفُجَّارِ لَفِي سِجِّينٍ"
    },
    {
      "id": 5856,
      "verseKey": "83:8",
      "verseNumber": 8,
      "textUthmani": "وَمَآ أَدْرَىٰكَ مَا سِجِّينٌ",
      "textSimple": "وَمَا أَدْرَاكَ مَا سِجِّينٌ"
    },
    {
      "id": 5857,
      "verseKey": "83:9",
      "verseNumber": 9,
      "textUthmani": "كِتَـٰبٌ مَّرْقُومٌ",
      "textSimple": "كِتَابٌ مَّرْقُومٌ"
    },
    {
      "id": 5858,
      "verseKey": "83:10",
      "verseNumber": 10,
      "textUthmani": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
      "textSimple": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ"
    },
    {
      "id": 5859,
      "verseKey": "83:11",
      "verseNumber": 11,
      "textUthmani": "ٱلَّذِينَ يُكَذِّبُونَ بِيَوْمِ ٱلدِّينِ",
      "textSimple": "الَّذِينَ يُكَذِّبُونَ بِيَوْمِ الدِّينِ"
    },
    {
      "id": 5860,
      "verseKey": "83:12",
      "verseNumber": 12,
      "textUthmani": "وَمَا يُكَذِّبُ بِهِۦٓ إِلَّا كُلُّ مُعْتَدٍ أَثِيمٍ",
      "textSimple": "وَمَا يُكَذِّبُ بِهِ إِلَّا كُلُّ مُعْتَدٍ أَثِيمٍ"
    },
    {
      "id": 5861,
      "verseKey": "83:13",
      "verseNumber": 13,
      "textUthmani": "إِذَا تُتْلَىٰ عَلَيْهِ ءَايَـٰتُنَا قَالَ أَسَـٰطِيرُ ٱلْأَوَّلِينَ",
      "textSimple": "إِذَا تُتْلَىٰ عَلَيْهِ آيَاتُنَا قَالَ أَسَاطِيرُ الْأَوَّلِينَ"
    },
    {
      "id": 5862,
      "verseKey": "83:14",
      "verseNumber": 14,
      "textUthmani": "كَلَّا ۖ بَلْ ۜ رَانَ عَلَىٰ قُلُوبِهِم مَّا كَانُوا۟ يَكْسِبُونَ",
      "textSimple": "كَلَّا ۖ بَلْ ۜ رَانَ عَلَىٰ قُلُوبِهِم مَّا كَانُوا يَكْسِبُونَ"
    },
    {
      "id": 5863,
      "verseKey": "83:15",
      "verseNumber": 15,
      "textUthmani": "كَلَّآ إِنَّهُمْ عَن رَّبِّهِمْ يَوْمَئِذٍ لَّمَحْجُوبُونَ",
      "textSimple": "كَلَّا إِنَّهُمْ عَن رَّبِّهِمْ يَوْمَئِذٍ لَّمَحْجُوبُونَ"
    },
    {
      "id": 5864,
      "verseKey": "83:16",
      "verseNumber": 16,
      "textUthmani": "ثُمَّ إِنَّهُمْ لَصَالُوا۟ ٱلْجَحِيمِ",
      "textSimple": "ثُمَّ إِنَّهُمْ لَصَالُو الْجَحِيمِ"
    },
    {
      "id": 5865,
      "verseKey": "83:17",
      "verseNumber": 17,
      "textUthmani": "ثُمَّ يُقَالُ هَـٰذَا ٱلَّذِى كُنتُم بِهِۦ تُكَذِّبُونَ",
      "textSimple": "ثُمَّ يُقَالُ هَٰذَا الَّذِي كُنتُم بِهِ تُكَذِّبُونَ"
    },
    {
      "id": 5866,
      "verseKey": "83:18",
      "verseNumber": 18,
      "textUthmani": "كَلَّآ إِنَّ كِتَـٰبَ ٱلْأَبْرَارِ لَفِى عِلِّيِّينَ",
      "textSimple": "كَلَّا إِنَّ كِتَابَ الْأَبْرَارِ لَفِي عِلِّيِّينَ"
    },
    {
      "id": 5867,
      "verseKey": "83:19",
      "verseNumber": 19,
      "textUthmani": "وَمَآ أَدْرَىٰكَ مَا عِلِّيُّونَ",
      "textSimple": "وَمَا أَدْرَاكَ مَا عِلِّيُّونَ"
    },
    {
      "id": 5868,
      "verseKey": "83:20",
      "verseNumber": 20,
      "textUthmani": "كِتَـٰبٌ مَّرْقُومٌ",
      "textSimple": "كِتَابٌ مَّرْقُومٌ"
    },
    {
      "id": 5869,
      "verseKey": "83:21",
      "verseNumber": 21,
      "textUthmani": "يَشْهَدُهُ ٱلْمُقَرَّبُونَ",
      "textSimple": "يَشْهَدُهُ الْمُقَرَّبُونَ"
    },
    {
      "id": 5870,
      "verseKey": "83:22",
      "verseNumber": 22,
      "textUthmani": "إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍ",
      "textSimple": "إِنَّ الْأَبْرَارَ لَفِي نَعِيمٍ"
    },
    {
      "id": 5871,
      "verseKey": "83:23",
      "verseNumber": 23,
      "textUthmani": "عَلَى ٱلْأَرَآئِكِ يَنظُرُونَ",
      "textSimple": "عَلَى الْأَرَائِكِ يَنظُرُونَ"
    },
    {
      "id": 5872,
      "verseKey": "83:24",
      "verseNumber": 24,
      "textUthmani": "تَعْرِفُ فِى وُجُوهِهِمْ نَضْرَةَ ٱلنَّعِيمِ",
      "textSimple": "تَعْرِفُ فِي وُجُوهِهِمْ نَضْرَةَ النَّعِيمِ"
    },
    {
      "id": 5873,
      "verseKey": "83:25",
      "verseNumber": 25,
      "textUthmani": "يُسْقَوْنَ مِن رَّحِيقٍ مَّخْتُومٍ",
      "textSimple": "يُسْقَوْنَ مِن رَّحِيقٍ مَّخْتُومٍ"
    },
    {
      "id": 5874,
      "verseKey": "83:26",
      "verseNumber": 26,
      "textUthmani": "خِتَـٰمُهُۥ مِسْكٌ ۚ وَفِى ذَٰلِكَ فَلْيَتَنَافَسِ ٱلْمُتَنَـٰفِسُونَ",
      "textSimple": "خِتَامُهُ مِسْكٌ ۚ وَفِي ذَٰلِكَ فَلْيَتَنَافَسِ الْمُتَنَافِسُونَ"
    },
    {
      "id": 5875,
      "verseKey": "83:27",
      "verseNumber": 27,
      "textUthmani": "وَمِزَاجُهُۥ مِن تَسْنِيمٍ",
      "textSimple": "وَمِزَاجُهُ مِن تَسْنِيمٍ"
    },
    {
      "id": 5876,
      "verseKey": "83:28",
      "verseNumber": 28,
      "textUthmani": "عَيْنًا يَشْرَبُ بِهَا ٱلْمُقَرَّبُونَ",
      "textSimple": "عَيْنًا يَشْرَبُ بِهَا الْمُقَرَّبُونَ"
    },
    {
      "id": 5877,
      "verseKey": "83:29",
      "verseNumber": 29,
      "textUthmani": "إِنَّ ٱلَّذِينَ أَجْرَمُوا۟ كَانُوا۟ مِنَ ٱلَّذِينَ ءَامَنُوا۟ يَضْحَكُونَ",
      "textSimple": "إِنَّ الَّذِينَ أَجْرَمُوا كَانُوا مِنَ الَّذِينَ آمَنُوا يَضْحَكُونَ"
    },
    {
      "id": 5878,
      "verseKey": "83:30",
      "verseNumber": 30,
      "textUthmani": "وَإِذَا مَرُّوا۟ بِهِمْ يَتَغَامَزُونَ",
      "textSimple": "وَإِذَا مَرُّوا بِهِمْ يَتَغَامَزُونَ"
    },
    {
      "id": 5879,
      "verseKey": "83:31",
      "verseNumber": 31,
      "textUthmani": "وَإِذَا ٱنقَلَبُوٓا۟ إِلَىٰٓ أَهْلِهِمُ ٱنقَلَبُوا۟ فَكِهِينَ",
      "textSimple": "وَإِذَا انقَلَبُوا إِلَىٰ أَهْلِهِمُ انقَلَبُوا فَكِهِينَ"
    },
    {
      "id": 5880,
      "verseKey": "83:32",
      "verseNumber": 32,
      "textUthmani": "وَإِذَا رَأَوْهُمْ قَالُوٓا۟ إِنَّ هَـٰٓؤُلَآءِ لَضَآلُّونَ",
      "textSimple": "وَإِذَا رَأَوْهُمْ قَالُوا إِنَّ هَٰؤُلَاءِ لَضَالُّونَ"
    },
    {
      "id": 5881,
      "verseKey": "83:33",
      "verseNumber": 33,
      "textUthmani": "وَمَآ أُرْسِلُوا۟ عَلَيْهِمْ حَـٰفِظِينَ",
      "textSimple": "وَمَا أُرْسِلُوا عَلَيْهِمْ حَافِظِينَ"
    },
    {
      "id": 5882,
      "verseKey": "83:34",
      "verseNumber": 34,
      "textUthmani": "فَٱلْيَوْمَ ٱلَّذِينَ ءَامَنُوا۟ مِنَ ٱلْكُفَّارِ يَضْحَكُونَ",
      "textSimple": "فَالْيَوْمَ الَّذِينَ آمَنُوا مِنَ الْكُفَّارِ يَضْحَكُونَ"
    },
    {
      "id": 5883,
      "verseKey": "83:35",
      "verseNumber": 35,
      "textUthmani": "عَلَى ٱلْأَرَآئِكِ يَنظُرُونَ",
      "textSimple": "عَلَى الْأَرَائِكِ يَنظُرُونَ"
    },
    {
      "id": 5884,
      "verseKey": "83:36",
      "verseNumber": 36,
      "textUthmani": "هَلْ ثُوِّبَ ٱلْكُفَّارُ مَا كَانُوا۟ يَفْعَلُونَ",
      "textSimple": "هَلْ ثُوِّبَ الْكُفَّارُ مَا كَانُوا يَفْعَلُونَ"
    }
  ]
}